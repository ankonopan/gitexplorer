<div class="row section">
  <% unless @repositories.empty? %>
    <% @repositories.repos.each do |repo| %>
      <div class="col s12 m6 l4 card">
        <div class="card-content">
          <span class="card-title">
            <a href="<%= repo.url%>"> <%= repo.full_name%></a>
          </span>
          <p>
            <%= repo.description %>
          </p>
        </div>
      </div>
    <% end %>
  <% else %>
    No repositories found
  <% end %>
</div>
